<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="500.0" prefWidth="700.0" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rps.gui.controller.GameViewController">
   <children>
      <VBox prefHeight="200.0" prefWidth="500.0">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <VBox alignment="TOP_CENTER" spacing="50.0">
                     <children>
                        <Label fx:id="txtHumanName" text="Human name" />
                        <ImageView fx:id="imgHumanPick" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
                  <Label text="VS" />
                  <VBox alignment="TOP_CENTER" spacing="50.0">
                     <children>
                        <Label fx:id="txtBotName" text="Bot name" />
                        <ImageView fx:id="imgBotPick" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets top="50.0" />
               </padding>
            </HBox>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="Make your pick!" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="150.0" onMousePressed="#pickRock" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/Rock.jpg" />
                           </image>
                        </ImageView>
                        <ImageView fitHeight="150.0" fitWidth="150.0" layoutX="183.0" layoutY="10.0" onMousePressed="#pickPaper" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/Paper.jpg" />
                           </image>
                        </ImageView>
                        <ImageView fitHeight="150.0" fitWidth="150.0" layoutX="268.0" layoutY="10.0" onMousePressed="#pickScissor" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/Scissors.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Previous results" />
            <TextArea fx:id="resultField" editable="false" focusTraversable="false" pickOnBounds="false" prefHeight="500.0" prefWidth="200.0" />
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
